<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/upperconstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="9dp">
        <LinearLayout
            android:id="@+id/total"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="TOTAL"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/total_record"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="28 - 15"
                android:textSize="25sp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/total_percentage"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="holder 1"
                android:layout_gravity="center"/>
        </LinearLayout>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="12dp"
            android:background="@color/gray_200"/>
        <LinearLayout
            android:id="@+id/home"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="HOME"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/home_record"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="28 - 15"
                android:textSize="25sp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/home_percentage"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="holder 1"
                android:layout_gravity="center"/>
        </LinearLayout>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="12dp"
            android:background="@color/gray_200"/>
        <LinearLayout
            android:id="@+id/away"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="AWAY"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/away_record"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="28 - 15"
                android:textSize="25sp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/away_percentage"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="holder 1"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="8dp"
        android:background="@color/gray_200"
        app:layout_constraintTop_toBottomOf="@id/upperconstraintLayout"
        app:layout_constraintBottom_toTopOf="@id/lowerconstraintLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <LinearLayout
        android:id="@+id/lowerconstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upperconstraintLayout"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="LAST 10: "
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/last10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="5 - 5" />
        </LinearLayout>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="8dp"
            android:background="@color/gray_200"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:layout_marginHorizontal="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Streak: "
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/streak"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="W1" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="8dp"
        android:background="@color/gray_200"
        app:layout_constraintTop_toBottomOf="@id/lowerconstraintLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomLinear"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <LinearLayout
        android:id="@+id/bottomLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lowerconstraintLayout"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team Bio"
                android:textStyle="bold"
                android:textSize="15sp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="8dp"
            android:background="@color/gray_200"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Founding Date: "
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginRight="3dp"/>
            <TextView
                android:id="@+id/founding_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2001"
                android:textSize="15sp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="8dp"
            android:background="@color/gray_200"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arena: "
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginRight="3sp"/>
            <TextView
                android:id="@+id/arena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HoPing Stadium"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>